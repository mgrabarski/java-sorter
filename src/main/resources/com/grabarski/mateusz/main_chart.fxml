      prefWidth="700.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.grabarski.mateusz.controller.MainController">
    <children>
        <LineChart fx:id="lineChart">
            <xAxis>
                <NumberAxis side="BOTTOM"/>
